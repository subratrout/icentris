<header id="content-header">
  <h1>Contacts for <%= link_to(@user.name, @user) %></h1>
</header>
<div class="contact-box">
  <% @contacts.each do |contact| %>
      <div class="contact-person">

          <h4> Name: <%= link_to contact.name, user_contact_path(@user, contact) %></h4>

        <p>
          Email: <%= contact.email %>
        </p>
        <p>
          Phone: <%= contact.phone %>
        </p>
        <p>
          Adress: <%= contact.address %>
        </p>
        <p>
          <h5> Added <%= time_ago_in_words(contact.created_at) %> ago. </h5>
        </p>
      </div>
  <% end %>
</div>
<% if current_user?(@user) %>
  <%= link_to "Add Contacts", new_user_contact_path(@user),
                         class: 'btn btn-success' %>
<% end %>

<%= link_to "All Users", users_path, class: 'btn btn-primary' %>
